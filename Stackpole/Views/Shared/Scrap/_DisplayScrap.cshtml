
<h2>@ViewBag.Title</h2>

<div>
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label class="control-label">Plant</label>
                <span class="form-control" data-bind="text: plantId"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Department</label>
                <span class="form-control" data-bind="text: departmentId"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Part</label>
                <span class="form-control" data-bind="text: partId"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Operation</label>
                <span class="form-control" data-bind="text: operationId"></span>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="form-group">
                <label class="control-label">Unit Cost</label>
                <span class="form-control" data-bind="text: unitCost" />
            </div>
            <div class="form-group">
                <label class="control-label">Unit Weight</label>
                <span class="form-control" data-bind="text: unitWeight" />
            </div>
            <div class="form-group">
                <label class="control-label">Cancelled</label>
                <span class="form-control" data-bind="text: cancelled" />
            </div>

            <div class="form-group" style="display: none;">
                <label class="control-label">Machine</label>
                <label type="text" class="form-control" data-bind="value: machineId" />
            </div>
            <div class="form-group" style="display: none;">
                <label class="control-label">Date</label>
                <label type="text" class="form-control" data-bind="value: date" />
            </div>
        </div>
    </div>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Machine
                </th>
                <th>
                    Scrap Reason
                </th>
                <th class="text-right">
                    Quantity
                </th>
                <th class="text-right">
                    Value
                </th>
                <th class="text-right">
                    Weight
                </th>
                <th>
                    Employee #
                </th>
            </tr>
        </thead>

        <tbody data-bind="foreach: ScrapDetails">
            <tr>
                <td class="form-group"><span class="form-control input-sm" data-bind="text: machineId" /></td>
                <td class="form-group"><span class="form-control input-sm" data-bind="text: reasonId" /></td>
                <td class="form-group"><span class="form-control input-sm class=" text-right"" data-bind="text: quantity" /></td>
                <td class="form-group"><span class="form-control input-sm class=" text-right"" data-bind="text: cost" /></td>
                <td class="form-group"><span class="form-control input-sm class=" text-right"" data-bind="text: weight" /></td>
                <td class="form-group"><span class="form-control input-sm" data-bind="text: employeeNumber" /></td>
            </tr>
        </tbody>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
            <td class="form-group"><span class="form-control text-right">Total Cost</span></td>
            <td class="form-group"><span class="form-control text-right" data-bind="text: Total"></span></td>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
    </table>
</div>

<p><a href="/Scraps/Index/" class="btn btn-default">&laquo; Back to List</a></p>