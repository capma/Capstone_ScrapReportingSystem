@model  Stackpole.ViewModels.DeleteViewModel

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Scrap Reporting System</h4>
</div>

<div class="modal-body">
    <p>Are you sure you wish to delete?</p>
</div>

<div class="modal-footer">
    @using (Html.BeginForm("DeleteConfirmed", "ScrapDetails"))
    {
        @Html.HiddenFor(model => model.scrapDetailId)
        @Html.HiddenFor(model => model.operationId)

        <button type="submit" class="btn btn-default" id="modal-btn-yes">Yes</button>
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="modal-btn-no">No</button>
    }
</div>
