@model  int?

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">Scrap Reporting System</h4>
</div>

<div class="modal-body">
    @if (Model == 0)
    {
        <p>Nothing to cancel!</p>
    }
    else
    {
        <p>Are you sure you wish to cancel?</p>
    }
</div>

<div class="modal-footer">
    @if (Model == 0)
    {
        <button type="button" class="btn btn-primary" data-dismiss="modal" id="modal-btn-ok">OK</button>
    }
    else
    {
        using (Html.BeginForm("CancelEntrySubmit", "ScrapDetails", new { scrapId = Model }))
        {
            <button type="submit" class="btn btn-default" id="modal-btn-yes">Yes</button>
            <button type="button" class="btn btn-primary" data-dismiss="modal" id="modal-btn-no">No</button>
        }
    }
</div>
